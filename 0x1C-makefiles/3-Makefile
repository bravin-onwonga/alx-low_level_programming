CC = gcc
SRC = $(wildcard *.c)
OBJ = $(SRC:.c=.o)
NAME = school
RM = rm

all: $(NAME)

%.o: %.c
	$(CC) -c -o  $@ $<

$(NAME): $(OBJ)
	$(CC) $(OBJ) -o $(NAME)

clean:
	rm -f *~ school

oclean:
	rm -f main.o school.o

fclean:
	rm -f *~ school
	rm -f main.o school.o

re:
	rm -f main.o school.o
	$(MAKE) all
